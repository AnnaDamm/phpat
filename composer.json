{
  "name": "carlosas/phparchitest",
  "description": "PHPArchiTest is an architecture testing tool for PHP.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Carlos Alandete Sastre",
      "email": "carlos.alandete@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "roave/better-reflection": "^3.3",
    "symfony/dependency-injection": "^4.2",
    "symfony/finder": "^4.2",
    "symfony/yaml": "^4.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "PHPArchiTest\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\PHPArchiTest\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "bin": [
    "phpat"
  ]
}
