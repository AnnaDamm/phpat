services:
	- PHPat\Test\TestExtractor
	- PHPat\Test\TestParser
	- PHPat\Statement\Builder\StatementBuilderFactory
	- PHPat\Configuration(tests: %phpat.tests%)

	# MustNotDepend rules
	-
		class: PHPat\Rule\Assertion\MustNotDepend\ClassConstantRule
		tags:
			- phpstan.rules.rule
	-
		class: PHPat\Rule\Assertion\MustNotDepend\MethodParamRule
		tags:
			- phpstan.rules.rule
	-
		class: PHPat\Rule\Assertion\MustNotDepend\NewRule
		tags:
			- phpstan.rules.rule
	-
		class: PHPat\Rule\Assertion\MustNotConstruct\NewRule
		tags:
			- phpstan.rules.rule

	# MustNotConstruct rules
	-
		class: PHPat\Rule\Assertion\VarDump
		tags:
			- phpstan.rules.rule

parametersSchema:
	phpat: structure([
		tests: listOf(string())
	])
